<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.tarunb.jistr.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TextArea fx:id="codeArea" prefHeight="500.0" prefWidth="750.0" promptText="// Quality Code Here" GridPane.rowIndex="1">
         <font>
            <Font name="Courier New" size="13.0" />
         </font>
      </TextArea>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <TextField fx:id="filenameField" prefHeight="27.0" prefWidth="171.0" promptText="Filename.txt" HBox.hgrow="ALWAYS" />
            <TextField fx:id="descriptionField" prefHeight="27.0" prefWidth="365.0" promptText="Description" />
            <Button mnemonicParsing="false" onAction="#onPostButtonPressed" text="Post" />
         </children>
      </HBox>
   </children>
</GridPane>
